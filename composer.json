{
    "name": "unn/gettext-blade",
    "description": "Blade code scanner and extractor for php-gettext",
    "type": "library",
    "keywords": ["gettext", "blade", "php", "i18n", "translation"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Lubitz",
            "email": "lubitz@unn-online.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/unn-gmbh/Gettext-Blade/issues"
    },
    "require": {
        "php": "^8.2|^8.1|^8.0|^7.3",
        "gettext/gettext": "^5.6",
        "gettext/php-scanner": "^1.3",
        "illuminate/view": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Unn\\GettextBlade\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Unn\\GettextBlade\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs"
        ]
    }
}
